<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SAH.UI.SplashWindow"
        Width="680" Height="360"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        SystemDecorations="None"
        Background="#FFF"
        Icon="avares://SAH.UI/Assets/logo.ico">
  <Window.Resources>
    <!-- Color de marca (ajústalo si quieres otro tono) -->
    <SolidColorBrush x:Key="BrandTeal" Color="#19D0A8"/>
    <SolidColorBrush x:Key="TrackLight" Color="#E9F9F6"/>
  </Window.Resources>

  <Border Padding="14" Background="#F3F4F6" BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="6">
    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="Auto,*" Margin="6">
      <!-- Logo -->
      <Border Width="72" Height="72" Background="#E9EDF1" CornerRadius="6" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="6">
        <Image Source="avares://SAH.UI/Assets/logoprincipal.png" Width="56" Height="56" Stretch="Uniform"/>
      </Border>

      <!-- Título y subtítulo -->
      <StackPanel Grid.Column="1" Margin="12,6,6,6">
        <TextBlock Text="CHARM" FontSize="20" FontWeight="Bold" Foreground="#111" />
        <TextBlock Text="Cuenca Hourly Alert and Runoff Monitor — Versión 3.1" FontSize="12" Foreground="#333" Margin="0,6,0,0"/>
      </StackPanel>

      <!-- Centro: texto + progress -->
      <StackPanel Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
        <TextBlock Text="Cargando… por favor espera" FontSize="14" Foreground="#222" HorizontalAlignment="Center" />
        <ProgressBar x:Name="Pb"
                     Width="420"
                     Height="12"
                     Minimum="0"
                     Maximum="100"
                     Value="0"
                     Foreground="{StaticResource BrandTeal}"
                     Background="{StaticResource TrackLight}"/>
        <TextBlock x:Name="StatusText" Text="Inicializando..." FontSize="12" Foreground="#444" HorizontalAlignment="Center"/>
      </StackPanel>

      <!-- Footer / créditos profesional -->
      <Border Grid.Row="2" Grid.ColumnSpan="2" Margin="0,12,0,0" Padding="8,6,8,6" Background="Transparent" >
        <StackPanel>
          <Border Height="1" Background="#E0E0E0" Margin="0,0,0,8"/>
          <Grid ColumnDefinitions="*,Auto" VerticalAlignment="Center">
            <!-- Izquierda: etiquetas + nombres -->
            <Grid Grid.Column="0">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>

              <TextBlock Grid.Column="0" Text="Autor:" FontWeight="Bold" FontSize="11" Foreground="#333" VerticalAlignment="Top" />
              <TextBlock Grid.Column="2" Text="Jorge Ramírez Fernández (Geógrafo · Hidrólogo)" FontSize="11" Foreground="#444" TextWrapping="Wrap" />

              <TextBlock Grid.Column="0" Grid.Row="1" Text="Programación:" FontWeight="Bold" FontSize="11" Foreground="#333" Margin="0,6,0,0" />
              <TextBlock Grid.Column="2" Grid.Row="1" Text="Nicolás Castro Castro (Ingeniero Geomensor · Desarrollador)" FontSize="11" Foreground="#444" Margin="0,6,0,0" TextWrapping="Wrap" />

              <TextBlock Grid.Column="0" Grid.Row="2" Text="Realización:" FontWeight="Bold" FontSize="11" Foreground="#333" Margin="0,6,0,0" />
              <TextBlock Grid.Column="2" Grid.Row="2" Text="Nicolás Castro Castro · Rafael Espinoza" FontSize="11" Foreground="#444" Margin="0,6,0,0" TextWrapping="Wrap" />

              <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
              </Grid.RowDefinitions>
            </Grid>

            <!-- Derecha: versión / año -->
            <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
              <TextBlock Text="Versión 3.1" FontSize="11" Foreground="#666" HorizontalAlignment="Right"/>
              <TextBlock Text="© 2025" FontSize="11" Foreground="#666" HorizontalAlignment="Right" Margin="0,4,0,0"/>
            </StackPanel>
          </Grid>
        </StackPanel>
      </Border>

    </Grid>
  </Border>
</Window>